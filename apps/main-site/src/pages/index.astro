---
import Layout from "../Layout.astro";
import getTheme from "ui/utils/getTheme";
import { LinkButton } from "ui/kit/buttons";
import { GithubLogo } from "ui/logos";

import ProjectsSlider from "../components/home/projects-slider/slider";
import ShareButton from "../components/home/share-button";
import Essentials from "../components/home/essentials.astro";

const theme = getTheme(Astro);
// TODO: Make proper essentials page
---

<Layout theme={theme}>
  <section
    class="flex flex-col items-center w-full max-w-[90vw] xs:max-w-[87vw] 2.5xl:max-w-none 2.5xl:px-12 sm:max-w-none"
  >
    <div
      class="max-w-[1680px] min-h-[calc(95vh-6rem)] items-center pb-20 flex 2.5xl:flex-row flex-col w-full 2.5xl:justify-between"
    >
      <div
        class="flex flex-col space-y-6 sm:space-y-10 2.5xl:space-y-20 mb-16 2.5xl:mb-0 max-w-2xl 2.5xl:max-w-[620px]"
      >
        <div class="flex flex-col space-y-2 2.5xl:text-left text-center">
          <div class="flex items-center justify-center 2.5xl:justify-start space-x-4 text-primary sm:text-base text-sm">
            <span class="px-4 py-1 border border-normal">latest release</span>
            <span>v0.1.0</span>
          </div>
          <h1 class="text-4xl font-bold sm:text-6xl text-primary">Why not dare to be different</h1>
          <p class="text-lg font-light sm:text-2xl text-secondary">
            Did you know that on average 79% of all websites use trackers that collect user data. This user data is
            often sold and traded amongst companies
          </p>
        </div>
        <div class="flex items-center justify-center 2.5xl:justify-start space-x-8">
          <LinkButton to="/projects" client:visible>Our Work</LinkButton>
          <div class="flex items-center">
            <LinkButton
              to="https://github.com/ted-too/letsbesafe.dev"
              target="_blank"
              variant="transparent"
              class="mr-4 text-secondary"
              aria-label='Github Repository'
              client:visible
            >
              <GithubLogo class="w-auto h-5" />
            </LinkButton>
            <ShareButton client:visible />
          </div>
        </div>
      </div>
      <ProjectsSlider class="sm:max-w-[90vw] lg:max-w-[63.75rem] 2.5xl:ml-6" client:visible />
    </div>
  </section>
  <section class="w-full px-4 py-12 xs:py-16 xl:px-8 2.5xl:px-0 sm:py-32 bg-dark-400 dark:bg-[#a4c3b2]">
    <div class="w-full max-w-[1366px] mx-auto flex flex-col space-y-8">
      <div class="flex flex-col mx-auto text-center xl:mx-0 1.5xl:text-left text-primary-inverse">
        <h2 class="text-3xl font-semibold sm:text-5xl">Essentials</h2>
        <span class="text-xl sm:text-2xl font-extralight"
          >A list of things we consider <b class="font-semibold">essential</b>
        </span>
      </div>
      <div class="flex flex-col">
        <div
          class="flex flex-wrap justify-center w-9/12 gap-6 mx-auto sm:mx-auto sm:w-full 1.5xl:justify-between text-middle-gray"
        >
          <Essentials />
        </div>
        <!-- <LinkButton invert={true} to="/essentials" class="mx-auto mt-16 1.5xl:mt-24 1.5xl:mx-0 dark:hover:ring-offset-[#a4c3b2]" client:visible
          >View All</LinkButton
        > -->
      </div>
    </div>
  </section>
  <section class="flex flex-col items-center w-full py-20 sm:py-24 px-7 sm:px-10 2xl:py-36 2xl:px-0">
    <div class="flex flex-col space-y-3 sm:space-y-8 max-w-[1366px] w-full text-center xl:text-left">
      <h1 class="text-3xl font-semibold sm:text-5xl">Contribution</h1>
      <div class="flex flex-col items-center justify-between w-full space-y-10 xl:flex-row xl:items-start xl:space-y-0">
        <div class="flex flex-col w-full max-w-xl">
          <h2 class="text-2xl font-semibold sm:text-4xl">I have a new really cool idea!!</h2>
          <p class="mt-2 text-lg font-light sm:text-2xl text-secondary">
            We always welcome new ideas to the project. However because we can’t do everyone’s ideas we have a voting
            system.
          </p>
          <LinkButton to="/projects/vote" variant="outline" class="mx-auto mt-8 xl:mx-0" client:visible
            >Take Me There</LinkButton
          >
        </div>
        <div class="flex flex-col w-full max-w-xl">
          <h2 class="text-2xl font-semibold sm:text-4xl">Everything else</h2>
          <p class="block mt-2 text-lg font-light sm:text-2xl text-secondary">
            Have a look at our <a href="https://github.com/ted-too/letsbesafe.dev/blob/dev/CONTRIBUTING.md" class="underline text-melon-600">contribution</a> guide.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
