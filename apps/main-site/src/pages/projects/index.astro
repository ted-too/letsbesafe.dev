---
import Layout from "../../Layout.astro";
import getTheme from "ui/utils/getTheme";
import { JameelaLogo, KawanLogo } from "ui/logos";
import { LinkButton } from "ui/kit/buttons";

const theme = getTheme(Astro);
---

<Layout theme={theme}>
  <div class="flex flex-col items-center space-y-1 sm:space-y-3 mb-8 lg:mt-4 xl:mt-[2.5rem] xl:mb-[4.5rem]">
    <h1 class="text-4xl font-bold sm:text-5xl xl:text-6xl text-primary">
      Projects
    </h1>
  </div>
  <div
    class="flex flex-col items-center w-full max-w-[90vw] xs:max-w-[87vw] 2.5xl:max-w-none 2.5xl:px-12 sm:max-w-none text-dark-300"
  >
    <div class="flex flex-col items-center w-full space-y-16 max-w-7xl">
      <div
        id="jameela"
        class="bg-[#F8EDEB] dark:bg-[#EAC8C3] lg:w-full p-8 sm:p-12 xl:p-16 flex gap-8 flex-col lg:flex-row items-center xl:items-start justify-between lg:h-[32.5rem] xl:h-[37.5rem] 1.5xl:h-[42.5rem]"
      >
        <div class="flex flex-col justify-between h-full">
          <div class="flex flex-col items-start max-w-xl xl:max-w-[28.75rem]">
            <JameelaLogo class="h-6 sm:h-7 xl:h-8" />
            <p class="mt-5 mb-3 xs:text-xl xl:text-2xl">
              Not your everyday youtube video downloader. Built from the ground up to be private and non-intrusive.
            </p>
            <ul class="list-disc list-inside xl:text-lg">
              <li>No ads</li>
              <li>No tracking</li>
              <li>No unnecessary file manipulation</li>
            </ul>
          </div>
          <LinkButton to="https://jameela.letsbesafe.dev" class="hidden lg:flex" client:visible>Let's Go</LinkButton>
        </div>
        <img
          alt="jameela screenshot"
          class="lg:w-auto w-full h-auto lg:h-[90%] xl:h-full max-w-xl no-drag"
          src="/jameela-screenie.png"
        />
        <LinkButton to="https://jameela.letsbesafe.dev" class="lg:hidden" client:visible>Let's Go</LinkButton>
      </div>
      <div
        id="kawan"
        class="bg-[#ACD8D3] dark:bg-[#74BEB5] relative lg:w-full p-8 sm:p-12 xl:p-16 flex gap-8 flex-col lg:flex-row items-center xl:items-start justify-between lg:h-[32.5rem] xl:h-[37.5rem] 1.5xl:h-[42.5rem]"
      >
        <div
          class="absolute -top-[1.125rem] sm:-top-[1.375rem] left-8 sm:left-12 xl:left-16 flex items-center px-6 sm:px-8 sm:h-11 h-9 sm:text-sm bg-isabelline-100"
        >
          Work in progress
        </div>
        <div class="flex flex-col justify-between h-full">
          <div class="flex flex-col items-start max-w-xl xl:max-w-[28.75rem]">
            <KawanLogo class="h-6 sm:h-7 xl:h-8" />
            <p class="mt-5 mb-3 xs:text-xl xl:text-2xl">
              When you think torrent search engine, Iâ€™m sure you imagine tons and tons of popups, fake links, malicous
              torrents, and misleading information. We aim to fix all that.
            </p>
            <ul class="list-disc list-inside xl:text-lg">
              <li>Large list of torrents</li>
              <li>No ads</li>
              <li>No tracking</li>
              <li>Reduced malicous torrents</li>
            </ul>
          </div>
          <LinkButton to="https://kawan.letsbesafe.dev" disabled={true} class="hidden lg:flex" client:visible
            >Let's Go</LinkButton
          >
        </div>
        <img
          alt="kawan screenshot"
          class="lg:w-auto w-full h-auto lg:h-[90%] xl:h-full max-w-xl no-drag"
          src="/coming-soon-screenie.png"
        />
        <LinkButton to="https://kawan.letsbesafe.dev" disabled={true} class="lg:hidden" client:visible
          >Let's Go</LinkButton
        >
      </div>
    </div>
  </div>
  <div class="px-16 py-4 border border-black-700 my-14 sm:my-20 xl:mt-[4.5rem] xl:mb-36 select-none">
    More coming soon
  </div>
</Layout>
