---
import clsx from "clsx";
import { JameelaLogo } from "ui/kit/logos";
import ThemeSwitcher from "ui/theme-switcher";
import Footer from "ui/layout/footer.astro";
import "ui/base-legacy.css";
import type { Theme } from "ui/utils/getTheme";

export interface Props {
  theme: Theme;
  class?: string;
}

const { theme, class: clazz } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Jameela - A Safe Youtube Video Downloader</title>
    <!-- favicon - (realfavicongenerator.net) -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body>
    <div class="w-full transition-colors duration-300 bg-normal">
      <header class="flex flex-col items-center w-full pt-16 pb-4">
        <a
          href="/"
          class="transition-all duration-300 ease-in-out w-max group text-normal hover:opacity-75 focus:opacity-75 focus:outline-none"
        >
          <JameelaLogo class="w-auto h-9" />
          <div class="mt-2 max-w-0 group-focus:max-w-full h-[2px] rounded-full transition-all duration-500 bg-inverse">
          </div>
        </a>
        <p class="mt-2 font-light text-center max-w sm:text-base text-light">
          [jah-mee-laa] – ‘beautiful’ <br /> swahili
        </p>
        <ThemeSwitcher class="mt-4" theme={theme} client:visible />
      </header>
      <main class={clsx("min-h-screen w-full max-w-[1536px] mx-auto px-5 sm:px-0 flex flex-col items-center", clazz)}>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
