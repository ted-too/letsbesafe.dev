---
import { IconButton } from "../kit/buttons";
import { PayPal } from "../iconsax";
import Link from "../kit-new/link";
import { GithubLogo, LetsBeSafeLogo } from "../kit/logos";
import { LinkButton } from "../kit-new/buttons";

export interface Props {
  mainSite?: boolean;
}

const { mainSite = false } = Astro.props;
const linkPrefix = mainSite ? "/" : "https://letsbesafe.dev/";

// FIXME: Repsonsive breakpoint 1440px broken
---

<div class="px-4 md:px-8 1.5xl:px-0 w-full border-t border-black-100 dark:border-w-overlay-300">
  <footer
    class="flex flex-col w-full max-w-xs pb-10 mx-auto mt-40 space-y-32 sm:max-w-2xl md:max-w-4xl xl:max-w-6xl 2xl:max-w-7xl md:pb-16 md:mt-48"
  >
    <div class="grid justify-center w-full grid-cols-6 space-y-8">
      <div class="w-[19rem] col-span-full sm:col-span-4 xl:col-span-3 flex flex-col space-y-6">
        <div class="flex flex-col space-y-2">
          <span class="text-sm font-light text-light">a project by</span>
          <Link to={linkPrefix} class="h-6" aria-label="Letsbesafe Logo">
            <LetsBeSafeLogo class="w-auto h-full pb-1" />
          </Link>
        </div>
        <p class="text-lg text-light">Because it doesn’t hurt to be safe in today’s day and age.</p>
        <div class="flex space-x-4 text-normal">
          <LinkButton
            to="https://github.com/ted-too/letsbesafe.dev"
            target="_blank"
            variant="transparent"
            class="hover:text-secondary focus:text-melon-400"
            aria-label="Github Repository"
          >
            <GithubLogo class="w-auto h-5" />
          </LinkButton>
          <LinkButton
            to="https://www.paypal.com/donate/?hosted_button_id=J55RS4J8V47MG"
            target="_blank"
            variant="transparent"
            class="hover:text-secondary focus:text-melon-400"
            aria-label="Donate on PayPal"
          >
            <PayPal class="w-auto h-5" />
          </LinkButton>
        </div>
      </div>
      <nav class="flex flex-col w-48 col-span-full sm:col-span-1">
        <span class="mb-5 text-lg font-semibold text-normal">General</span>
        <Link to="/" underlineHover>Home</Link>
        <Link to={`${linkPrefix}legal/use-terms`} class="mt-2" underlineHover>Terms of use</Link>
        <Link to={`${linkPrefix}legal/privacy-policy`} class="my-2" underlineHover>Privacy policy</Link>
        <Link to={`${linkPrefix}contact`} underlineHover>Contact</Link>
      </nav>
      <div class="flex flex-col col-span-full sm:col-span-2 w-full max-w-[25.75rem]">
        <span class="text-lg font-semibold text-normal">Disclaimer</span>
        <p class="mt-5 text-lg text-light">
          By using this service you assume all liabilities in the event of a dispute by the content owner(s).
        </p>
        <a
          href="https://github.com/ted-too/letsbesafe.dev/issues"
          target="_blank"
          class="mt-4 font-light text-melon-600 hover:underline focus:outline-none focus:underline w-max"
          >Found a bug?</a
        >
      </div>
    </div>
    <span class="text-sm font-light text-light">created for educational use :)</span>
  </footer>
</div>
